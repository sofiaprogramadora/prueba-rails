@font-face {
  font-family: 'Talls Films Expanded Oblique';
  src: url('<%= asset_path "Tall_Films_Expanded_Oblique.ttf" %>');
}


.pages-batman{
	background-image: url(<%= asset_path 'batman.jpg' %>);
	background-size: 100% auto;
	font-family: 'Talls Films Expanded Oblique';
	color: #DD0000;
	font-size: 100px;
	text-align: center;
	margin: auto;
    width: 50%;
    padding: 10px;
    font-weight: 800;
}


hr{
	width:1px;
	height:500px;
}

.pages-superman{
	background-image: url(<%= asset_path 'superman.jpeg' %>);
	background-size: 100% auto;
	font-family: 'Talls Films Expanded Oblique';
	color: #330000;
	font-size: 100px;
	text-align: center;
	margin: auto;
    width: 50%;
    padding: 10px;
    font-weight: 800;
}

body{
	margin: 0;
	padding: 0;
}

img{
	margin: 0;
	padding: 0;
	font-size: 0;
	float: left;
}

img::after{
	clear: both
}

.left{
	float: left;
}

.left::after{
	clear: both;
}

.right{
	float: right;
}

.right::after{
	clear: both;
}


p{
	margin: 0;
}